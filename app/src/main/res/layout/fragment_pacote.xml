<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingLeft="16dp"
    tools:context="postaltracker.app.alexandrealessi.com.br.postal.view.PacoteFragment">


    <ImageButton
        android:id="@+id/btnScanQrCode"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:backgroundTint="#a15"
        android:scaleType="fitXY"
        android:src="@drawable/postal" />


    <LinearLayout
        android:id="@+id/layCodeSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignTop="@id/btnScanQrCode"
        android:layout_toRightOf="@id/btnScanQrCode"
        >

        <AutoCompleteTextView
            android:id="@+id/edtTipoServico"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:completionThreshold="1"
            android:dropDownWidth="80dp"
            android:gravity="center"
            android:hint="SS"
            android:inputType="textAutoComplete|textCapCharacters"
            android:selectAllOnFocus="true"
            android:text=""
            android:textColor="#012"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtCode"
            style="?android:autoCompleteTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="123456789"
            android:inputType="number"
            android:maxLength="9"
            android:selectAllOnFocus="true"
            android:textSize="20dp"

            />

        <AutoCompleteTextView
            android:id="@+id/edtPais"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:completionThreshold="1"
            android:dropDownWidth="80dp"
            android:gravity="center"
            android:inputType="textAutoComplete|textCapCharacters"
            android:selectAllOnFocus="true"
            android:text="BR"
            android:textColor="#012"
            android:textSize="20dp" />
    </LinearLayout>
    
    <FrameLayout
        android:id="@+id/layToastPosition"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnScanQrCode">

        <android.support.v7.widget.RecyclerView

        android:id="@+id/listDetalhe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>


    </FrameLayout>


</RelativeLayout>